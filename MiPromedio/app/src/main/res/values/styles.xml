<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_text_grade" parent="style_text">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimaryLight</item>
        <item name="android:tint">@color/colorPrimaryLight</item>

        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_text">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/oval_box</item>
    </style>

    <style name="style_text_average_grade" parent="style_text">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>

        <item name="android:textSize">32sp</item>
    </style>
</resources>
